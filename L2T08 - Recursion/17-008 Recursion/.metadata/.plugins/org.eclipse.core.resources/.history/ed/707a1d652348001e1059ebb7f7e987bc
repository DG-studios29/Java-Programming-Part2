package task2;

public class LCMRecursion {
	}

    public static int lcm(int x, int y) {
        return (x * y) ; // LCM(x, y) = (x * y) / gcd(x, y)
    }

    public static void main(String[] args) {
        int x = 15;
        int y = 18;
        
        int result = lcm(x, y);
        System.out.println("LCM of " + x + " and " + y + " is: " + result);
    }
}
